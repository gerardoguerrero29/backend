div 
    h2(style="color:crimson;")= "Historial"
    br
    if DB_PRODUCTOS.length >0
        div(class="table-responsive")
            table(class="table table-dark")
                tr(style="color: yellow;")
                    th="Producto"
                    th="Precio"
                    th="Foto"
                each prod in DB_PRODUCTOS
                 tr 
                    td=prod.nombre
                    td=prod.precio
                    td
                        img(width="50" height="50px" src=prod.foto, alt="foto")
    else 
        h3(class="alert alert-warning")="No se encontraron productos"